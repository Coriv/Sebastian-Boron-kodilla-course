CREATE TABLE BOOKS_AUD
(
    EVENT_ID       INT      NOT NULL AUTO_INCREMENT,
    EVENT_TIME     DATETIME NOT NULL,
    EVENT_TYPE     varchar(11) DEFAULT NULL,
    BOOK_ID        int      NOT NULL,
    OLD_TITLE      varchar(55),
    NEW_TITLE      varchar(55),
    OLD_PUBYEAR    int(4),
    NEW_PUBYEAR    int(4),
    OLD_BESTSELLER BOOLEAN,
    NEW_BESTSELLER BOOLEAN,
    PRIMARY KEY (EVENT_ID)
);

DELIMITER $$
CREATE TRIGGER BOOKS_INSERT AFTER INSERT ON BOOKS
    FOR EACH ROW
    BEGIN
        INSERT INTO BOOKS_AUD (EVENT_TIME, EVENT_TYPE, BOOK_ID, NEW_TITLE, NEW_PUBYEAR, NEW_BESTSELLER)
            VALUES (CURTIME(), "INSERT", NEW.BOOK_ID, NEW.TITLE, NEW.PUBYEAR, NEW.BESTSELLER);
    end ;
DELIMITER ;

DELIMITER $$
CREATE TRIGGER BOOKS_DELETE AFTER DELETE ON BOOKS
    FOR EACH ROW
    BEGIN
        INSERT INTO BOOKS_AUD (EVENT_TIME, EVENT_TYPE, BOOK_ID)
            VALUES (CURTIME(), "DELETE", OLD.BOOK_ID);
    end ;
DELIMITER ;

DELIMITER $$
CREATE TRIGGER BOOKS_UPDATE AFTER UPDATE ON BOOKS
    FOR EACH ROW
    BEGIN
        INSERT INTO BOOKS_AUD (EVENT_TIME, EVENT_TYPE, BOOK_ID, OLD_TITLE, NEW_TITLE, OLD_PUBYEAR, NEW_PUBYEAR, OLD_BESTSELLER, NEW_BESTSELLER)
            VALUES (CURTIME(), "UPDATE", NEW.BOOK_ID, OLD.TITLE, NEW.TITLE, OLD_PUBYEAR, NEW.PUBYEAR, OLD.BESTSELLER, NEW.BESTSELLER);
    end ;
DELIMITER ;

CREATE TABLE READERS_AUD (
    EVENT_ID INT(11) NOT NULL AUTO_INCREMENT,
    EVENT_TIME DATETIME NOT NULL ,
    EVENT_TYPE varchar(11) NOT NULL ,
    READER_ID int(11) NOT NULL ,
    OLD_FIRSTNAME varchar(55),
    NEW_FIRSTNAME varchar(55),
    OLD_LASTNAME varchar(55),
    NEW_LASTNAME varchar(55),
    OLD_PESELID int(11),
    NEW_PESELID int(11),
    OLD_VIPLEVEl varchar(255),
    NEW_VIPLEVEL varchar(255),
    PRIMARY KEY (EVENT_ID)
    );

DELIMITER $$
CREATE TRIGGER READERS_INSERT AFTER INSERT ON READERS
    FOR EACH ROW
    BEGIN
        INSERT INTO READERS_AUD(EVENT_TIME, EVENT_TYPE, READER_ID, NEW_FIRSTNAME, NEW_LASTNAME, NEW_PESELID, NEW_VIPLEVEL)
            VALUES (CURTIME(), "INSERT", NEW.READER_ID, NEW.FIRSTNAME, NEW.LASTNAME, NEW.PESELID, NEW.VIP_LEVEL);
    end ;
DELIMITER ;

DELIMITER $$
CREATE TRIGGER READERS_DELETE AFTER DELETE ON READERS_AUD
    FOR EACH ROW
    BEGIN
        INSERT INTO READERS_AUD(EVENT_TIME, EVENT_TYPE, READER_ID)
            VALUES (CURTIME(), "DELETE", OLD.READER_ID);
    end ;
DELIMITER ;

DELIMITER $$
CREATE TRIGGER READERS_UPDATE AFTER UPDATE ON READERS
    FOR EACH ROW
    BEGIN
        INSERT INTO READERS_AUD(EVENT_TIME, EVENT_TYPE, READER_ID, OLD_FIRSTNAME, NEW_FIRSTNAME, OLD_LASTNAME, NEW_LASTNAME, OLD_PESELID, NEW_PESELID, OLD_VIPLEVEl, NEW_VIPLEVEL)
            VALUES (CURTIME(), "UPDATE", NEW.READER_ID, OLD.FIRSTNAME, NEW.FIRSTNAME, OLD.LASTNAME, NEW.LASTNAME, OLD.PESELID, NEW.PESELID, OLD.VIP_LEVEL, NEW.VIP_LEVEL);
    end ;
DELIMITER ;